#! /usr/bin/env node

const chalk = require('chalk');
const program = require('commander');
const pkg = require('../package.json');

const createUenoApp = require('../lib');
const messages = require('../lib/utils/messages');

let appType;
let projectName;
let appStyle = '';

program
  .version(pkg.version)
  .arguments('<app-type> <project-directory> ')
  .usage(`${chalk.yellow('<app-type>')} ${chalk.green('<project-directory>')} `)
  .action(function projectNameAction(type, name, style) {
    appType = type;
    projectName = name;
    // appStyle = style;
  })
  .allowUnknownOption()
  .on('--help', messages.help)
  .parse(process.argv);

createUenoApp({
  appType,
  projectName,
  // appStyle,
});
